<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:background="#2a2a2a">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:src="@drawable/logo"
        android:alpha="0.7"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/ButtonLarge"
            android:layout_marginRight="6dp"
            android:paddingBottom="5dp"
            android:text="O n e\nd a n c e"
            android:id="@+id/mins_4"/>

        <Button
            style="@style/ButtonLarge"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:paddingBottom="5dp"
            android:text="T w o\nd a n c e s"
            android:textSize="17sp"
            android:id="@+id/mins_8"/>

        <Button
            style="@style/ButtonLarge"
            android:layout_marginLeft="6dp"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            android:text="T h r e e\nd a n c e s"
            android:id="@+id/mins_12"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <Button
            style="@style/ButtonLarge"
            android:layout_marginRight="6dp"
            android:text="1 0\nM i n s"
            android:textSize="19sp"
            android:id="@+id/mins_10"/>

        <Button
            style="@style/ButtonLarge"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:text="1 5\nM i n s"
            android:textSize="19sp"
            android:id="@+id/mins_15"/>

        <Button
            style="@style/ButtonLarge"
            android:layout_marginLeft="6dp"
            android:text="3 0\nM i n s"
            android:textSize="18sp"
            android:id="@+id/mins_30"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

        <Button
            style="@style/ButtonLarge"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="7dp"
            android:text="45\nM i n s"
            android:textSize="18sp"
            android:id="@+id/mins_45"/>

        <Button
            style="@style/ButtonLarge"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="6dp"
            android:text="6 0\nM i n s"
            android:textSize="18sp"
            android:id="@+id/mins_60"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <!--TODO: Show booth #-->

</LinearLayout>
